{
	"name": "tools",
	"build": {
		"dockerfile": "../Dockerfile",
		"context": ".."
	},
	"workspaceFolder": "/workspaces/tools",
	// 自定义配置
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"MarsCode.marscode-extension"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.formatting.provider": "black",
				"editor.formatOnSave": true
			}
		}
	},
	// 端口转发配置
	"forwardPorts": [
		5555
	],
	// 容器创建后执行的命令
	"postCreateCommand": "pip3 install --upgrade pip && pip3 config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && pip3 install -r requirements.txt",
	// 远程用户配置
	"remoteUser": "vscode",
	// 挂载卷配置
	"mounts": [
		"source=/Volumes/myDriver/Docker/Streamlit,target=/external_storage,type=bind"
	],
	// 环境变量配置
	"containerEnv": {
		"PYTHONPATH": "/workspaces/tools",
		"STREAMLIT_SERVER_PORT": "5555",
		"STREAMLIT_SERVER_ADDRESS": "0.0.0.0",
		"EXTERNAL_STORAGE_PATH": "/external_storage"
	}
}