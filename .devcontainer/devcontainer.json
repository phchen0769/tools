{
	"name": "tools",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "streamlit",
	"workspaceFolder": "/workspaces/tools",
	// 自定义配置
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"MarsCode.marscode-extension"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.formatting.provider": "black",
				"editor.formatOnSave": true
			}
		}
	},
	// 端口转发配置
	"forwardPorts": [
		8888
	],
	// 容器创建后执行的命令
	"postCreateCommand": "pip3 install --upgrade pip && pip3 config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && pip3 install -r requirements.txt",
	// 远程用户配置
	"remoteUser": "vscode",
	// 开发容器配置
	"shutdownAction": "stopCompose"
}